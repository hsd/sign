<openerp>
  <data>
    <!-- Signs -->
    <!-- Menu item -->
    <record model="ir.actions.act_window" id="action_sign_form">
      <field name="name">Signs</field>
      <field name="res_model">sign.sign</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Form definition -->
    <record model="ir.ui.view" id="view_sign_form">
      <field name="name">sign.form</field>
      <field name="model">sign.sign</field>
      <field name="arch" type="xml">
        <form string="Sign">
	  <sheet>
	    <field class="oe_left" name="image" widget="image" img_height="150" nolabel="1" />
	    <div class="oe_left" style="width: 600px;">
	      <label class="oe_edit_only" for="name" string="Sign Name"/>
              <h1><field name="name" class="oe_inline"/><field name="desc" /></h1>
	    </div>
	    <group col="4">
	      <field name="regulated"/>
              <field name="active"/>
	      <field name="type_id" options="{'no_create' : True}"/>
	    </group>
	    <notebook>
	      <page string="Information">
	    	<field name="notes"/>
	      </page>

	    </notebook>

	  </sheet>
        </form>
      </field>
    </record>


    <!-- Default tree view -->
    <record model="ir.ui.view" id="view_sign_tree">
      <field name="name">sign.tree</field>
      <field name="model">sign.sign</field>
      <field name="arch" type="xml">
	<tree string="Signs">
          <field name="name" />
          <field name="desc" />
	  <field name="type_id" />
	  <field name="image" widget="image"/>
	</tree>
      </field>
    </record>

    <!-- Sign Kanban View -->
    <record model="ir.ui.view" id="view_sign_kanban">
      <field name="name">sign.kanban</field>
      <field name="model">sign.sign</field>
      <field name="arch" type="xml">
	<kanban>
          <field name="type_id"/>
          <field name="image"/>
          <field name="name"/>

          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_vignette oe_semantic_html_override">
		<a type="open"><img t-att-src="kanban_image('sign.sign', 'image', record.id.value)" class="oe_kanban_image"/></a>
		<div class="oe_kanban_details">
                  <h4>
                    <a type="open">
                      <t t-if="record.name.raw_value">[<field name="name"/>]</t> <field name="desc"/>
                    </a>
                  </h4>
		</div>
              </div>
            </t>
          </templates>
	</kanban>
      </field>
    </record>

    <!-- Search definition -->
    <record id="sign_search_form_view" model="ir.ui.view">
      <field name="name">sign.search.form</field>
      <field name="model">sign.sign</field>
      <field name="arch" type="xml">
	<search string="Sign">
          <field name="name" string="Sign" filter_domain="['|',('name','ilike',self),('code','ilike',self)]"/>
          <separator/>

          <group  expand='0' string='Group by...'>
            <filter string='Type' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type'}"/>
          </group>
	</search>
      </field>
    </record>

    <!-- Menu items -->
    <menuitem name="Signs" id="menu_config_signs" parent="stock.menu_stock_configuration" />
    <menuitem name="Signs" id="menu_content_signs"  parent="menu_config_signs" action="action_sign_form"/>

  </data>
</openerp>
